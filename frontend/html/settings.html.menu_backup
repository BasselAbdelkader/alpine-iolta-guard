            <!-- Firm Settings Section -->
            <div class="settings-section">
                <h4><i class="fas fa-building me-2"></i>Firm Settings</h4>
                <div class="row">
                    <!-- Firm Information -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="showComingSoon('Firm Information')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-building-columns"></i>
                                </div>
                                <h5>Firm Information</h5>
                                <p>Update law firm name, address, and contact details</p>
                            </div>
                        </div>
                    </div>

                    <!-- Bank Account Settings -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="showComingSoon('Bank Account Settings')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-university"></i>
                                </div>
                                <h5>Bank Account Settings</h5>
                                <p>Configure trust account and bank details</p>
                            </div>
                        </div>
                    </div>

                    <!-- Email & Notifications -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="showComingSoon('Email & Notifications')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <h5>Email & Notifications</h5>
                                <p>Configure email settings and notification preferences</p>
                            </div>
                        </div>
