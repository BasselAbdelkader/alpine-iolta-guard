                    </div>

                    <!-- Report Settings -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="showComingSoon('Report Settings')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-file-alt"></i>
                                </div>
                                <h5>Report Settings</h5>
                                <p>Configure report templates and formats</p>
                            </div>
                        </div>
                    </div>

                    <!-- System Information -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="showComingSoon('System Information')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-info-circle"></i>
                                </div>
