                                <div class="icon">
                                    <i class="fas fa-file-import"></i>
                                </div>
                                <h5>Import CSV Data<span class="badge-new">NEW</span></h5>
                                <p>Import clients, cases, and transactions from CSV file</p>
                            </div>
                        </div>
                    </div>

                    <!-- Export Data -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="showComingSoon('Export Data')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-file-export"></i>
                                </div>
