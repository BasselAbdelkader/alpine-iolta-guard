                        </div>
                    </div>

                    <!-- User Management -->
                    <div class="col-md-4 mb-4">
                        <div class="card settings-card" onclick="navigateTo('/user-management')">
                            <div class="card-body text-center">
                                <div class="icon">
                                    <i class="fas fa-users-cog"></i>
                                </div>
                                <h5>User Management<span class="badge-new">NEW</span></h5>
                                <p>Manage firm users and permissions</p>
                            </div>
                        </div>
                    </div>
                </div>
